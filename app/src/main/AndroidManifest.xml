<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.appnativaumb">

    <!-- Permiso para acceder a Internet - necesario para WebView -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="AppNativaUMB"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppNativaUMB">

        <!-- DeclaraciÃ³n de todas las actividades de la app -->
        <activity android:name=".ResultadoUsuarioActivity" android:exported="false" />
        <activity android:name=".RegistroUsuarioActivity" android:exported="false" />
        <activity android:name=".BusquedaWebActivity" android:exported="false" />
        <activity android:name=".PaginaUMBActivity" android:exported="false" />
        <activity android:name=".MenuPrincipalActivity" android:exported="false" />

        <!-- Actividad principal que se ejecuta primero (Splash) -->
        <activity android:name=".SplashActivity" android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
</manifest>
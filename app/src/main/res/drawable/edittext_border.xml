<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Fondo blanco -->
    <solid android:color="#FFFFFF"/>

    <!-- Borde gris de 1dp -->
    <stroke
        android:width="1dp"
        android:color="#CCCCCC"/>

    <!-- Esquinas redondeadas -->
    <corners android:radius="8dp"/>

    <!-- Padding interno -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp"/>
</shape>